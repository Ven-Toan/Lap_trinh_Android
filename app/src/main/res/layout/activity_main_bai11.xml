<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity_Bai11">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#72B8D8"
        android:gravity="center"
        android:text="Nhóm 4: Bài 11"
        android:textColor="#AD1457"
        android:textSize="30sp" />
    <ImageView
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:src="@drawable/bat"
        android:layout_gravity="center"/>
    <EditText
        android:drawableLeft="@drawable/baseline_login_24"
        android:id="@+id/edtTaiKhoan"
        android:hint="@string/edtTaiKhoan"
        style="@style/edt"

        />
    <EditText
        android:drawableLeft="@drawable/baseline_password_24"
        android:id="@+id/edtMatKhau"
        android:hint="@string/edtMatKhau"
        style="@style/edt"
        />
    <CheckBox
        android:id="@+id/cbGhiMatKhau"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ghi nhớ mật khẩu"/>
    <Button
        android:id="@+id/btnDangNhap"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/btnDangNhap"
        android:layout_gravity="center"/>
    <Button
        android:id="@+id/btnBieuDo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Biểu đồ"/>
    <com.github.mikephil.charting.charts.PieChart
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/pieChart"/>

</LinearLayout>